<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.blog.mapper.UserMapper">
	<resultMap id="userMap" type="com.study.blog.data.UserEntity">
		<id column="user_id" property="userId" />
		<result column="login_name" property="loginName" />
		<result column="password" property="password" />
		<result column="email" property="email" />
		<result column="create_date" property="createDate" />
		<result column="update_date" property="updateDate" />
	</resultMap>
	<!-- 验证登录 -->
	<select id="checkUser" resultMap="userMap">
		select * from bl_user
		<where>
			login_name = #{loginName}
			and
			password = #{password}
		</where>
	</select>	
	<!-- 获取user列表 -->
	<select id="usersList" resultMap="userMap">
	<![CDATA[select * from bl_user]]>
		<where>
			<if test="loginName != null and loginName != ''">
				login_name = #{loginName}
			</if>
		</where>
	    <![CDATA[ order by id desc ]]>
		<if test="pageSize != null and start != null ">
			limit #{start},#{pageSize}
		</if>
	</select>
	<!-- 获取user列表的总量 -->
	<select id="usersSize" resultType="Integer">  
	    <![CDATA[select count(*) from bl_user]]>
		<where>
			<if test="loginName != null and loginName != ''">
				login_name = #{loginName}
			</if>
		</where>
	</select>
	<select id="getUserEntityByLoginName" resultMap="userMap">
		select * from bl_user
		<where>
			login_name = #{loginName}
		</where>
	</select>
	<!-- 新建用户信息 -->
	<insert id="insertUser">
		insert into bl_user (user_id,login_name,password,email)
		values
		(#{userEntity.userId},#{userEntity.loginName},#{userEntity.password},#{userEntity.email})
	</insert>
	<!-- 更新用户信息 -->
	<update id="updateUser">
		update bl_user set
		login_name =
		#{userEntity.loginName},
		password = #{userEntity.password},
		email =
		#{userEntity.email}
		<where>
			id = #{userEntity.id}
		</where>
	</update>
	<!-- 删除用户信息 -->
	<delete id="deleteUsers">
		delete from bl_user
		<where>
			<if test="groupId !=null">
				id in
				<foreach collection="groupId" item="item" index="index"
					open="(" separator="," close=")">
					#{item}
				</foreach>
			</if>
		</where>
	</delete>
</mapper>